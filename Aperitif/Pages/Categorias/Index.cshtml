@page
@model Aperitif.Pages.Categorias.IndexModel
@{
}

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-6 text-end">
            <a href="Categorias/Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>&nbsp; Criar uma nova Categoria
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Display Order</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Categorias)
            {
                <tr>
                    <td width="50%">@obj.Nome</td>
                    <td width="50%">@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            
                            </a>
                            <a asp-page="Delete" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
